{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "Employees-CRUD-REST-API",
    "description": "A minimal and easy to follow of what you need to create a CRUD style API in ExpressJS using TypeScript and MySql"
  },
  "servers": [
    {
      "url": "http://localhost:4000/",
      "description": "SWAGGER HOST"
    }
  ],
  "tags": [
    {
      "name": "Employees",
      "description": "API for employees in the system"
    }
  ],
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "paths": {
    "/user/view": {
      "get": {
        "tags": ["Employees"],
        "summary": "Get all employees in system",
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "type": "array",
              "$ref": "#/components/schemas/GetEmployee"
            }
          },
          "500": {
            "description": "SERVER ERROR"
          }
        }
      }
    },
    "/user/add": {
      "post": {
        "tags": ["Employees"],
        "summary": "Create a new employee in system",
        "requestBody": {
          "description": "Employee Object",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "$ref": "#/components/schemas/Employee"
              }
            }
          }
        },
        "produces": ["application/json"],
        "responses": {
          "201": {
            "description": "New Employee Created"
          },
          "400": {
            "description": "Failed. Bad post data."
          },
          "500": {
            "description": "Server Error"
          }
        }
      }
    },
    "/user/view/{id}": {
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "description": "ID of the employee that we want to match",
          "type": "string"
        }
      ],
      "get": {
        "tags": ["Employees"],
        "summary": "Get employee with given ID",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "description": "Employee with id",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/components/schemas/Employee"
            }
          },
          "400": {
            "description": "Failed. Employee Id not valid"
          },
          "404": {
            "description": "Failed. Employee not found."
          }
        }
      },
      "put": {
        "summary": "Update employee with given ID",
        "tags": ["Employees"],
        "requestBody": {
          "description": "Employee Object",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Employee"
              }
            }
          }
        },
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "description": "Employee with new values of properties",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/components/schemas/Employee"
            }
          },
          "400": {
            "description": "Failed. Bad post data."
          },
          "404": {
            "description": "Failed. Employee not found."
          }
        }
      },
      "delete": {
        "summary": "Delete employee with given ID",
        "tags": ["Employees"],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "description": "Delete employee with id"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Failed. Employee Id not valid"
          },
          "404": {
            "description": "Failed. employee not found."
          }
        }
      }
    },
    "/user/view/": {}
  },
  "components": {
    "schemas": {
      "Employee": {
        "required": [
          "email",
          "plain_password",
          "name",
          "cnic",
          "designation",
          "contact"
        ],
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "example": "asif@email.com"
          },
          "plain_password": {
            "type": "string",
            "example": "asifmehmood"
          },
          "name": {
            "type": "string",
            "example": "ali hamza"
          },
          "cnic": {
            "type": "integer",
            "format": "int(13)",
            "example": 3740561125275
          },
          "designation": {
            "type": "string",
            "example": "user"
          },
          "contact": {
            "type": "integer",
            "format": "int(11)",
            "example": 12345678910
          }
        },

        "xml": {
          "name": "emp"
        }
      },

      "GetEmployee": {
        "required": [
          "id",
          "email",
          "plain_password",
          "protected_password",
          "name",
          "cnic",
          "designation",
          "contact"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "int(13)",
            "example": 1
          },
          "email": {
            "type": "string",
            "example": "asif"
          },
          "plain_password": {
            "type": "string",
            "example": "asif@email.com"
          },
          "protected_password": {
            "type": "string",
            "example": "asif@password"
          },
          "name": {
            "type": "string",
            "example": "password786"
          },
          "cnic": {
            "type": "integer",
            "format": "int(13)",
            "example": 3740561125275
          },
          "designation": {
            "type": "string",
            "example": "user"
          },
          "contact": {
            "type": "integer",
            "format": "int(11)",
            "example": 12345678910
          }
        },

        "xml": {
          "name": "emp2"
        }
      }
    }
  }
}
