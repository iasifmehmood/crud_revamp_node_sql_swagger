{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "Employees-CRUD-REST-API",
    "description": "A minimal and easy to follow of what you need to create a CRUD style API in ExpressJS using TypeScript and MySql"
  },
  "servers": [
    {
      "url": "http://localhost:4000/",
      "description": "SWAGGER HOST"
    }
  ],
  "tags": [
    {
      "name": "Employees",
      "description": "API for employees in the system"
    }
  ],
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "paths": {
    "/adduser": {
      "post": {
        "tags": ["Employees"],
        "summary": "Create a new employee in system",
        "requestBody": {
          "description": "Employee Object",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "$ref": "#/components/schemas/Employee"
              }
            }
          }
        },
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "New Employee Created"
          },
          "400": {
            "description": "Failed. Bad post data."
          },
          "404": {
            "description": "server cannot find the requested resource."
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/login": {
      "post": {
        "tags": ["Employees"],
        "summary": "Create a new employee in system",
        "requestBody": {
          "description": "Employee Object",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "$ref": "#/components/schemas/GetEmployee"
              }
            }
          }
        },
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "User login successfully"
          },
          "400": {
            "description": "Failed. Bad post data."
          },
          "404": {
            "description": "server cannot find the requested resource."
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Employee": {
        "required": ["email", "confirm_password", "password", "cnic"],
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "example": "asif-mehmood@hotmail.com"
          },
          "confirm_password": {
            "type": "string",
            "example": "asifmehmooD123"
          },
          "password": {
            "type": "string",
            "example": "asifmehmooD123"
          },
          "cnic": {
            "type": "string",
            "format": "varchar(13)",
            "example": "3740561125275"
          }
        },

        "xml": {
          "name": "emp"
        }
      },

      "GetEmployee": {
        "required": ["email", "password"],
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "example": "asif"
          },
          "password": {
            "type": "string",
            "example": "asif@email.com"
          }
        },

        "xml": {
          "name": "emp2"
        }
      }
    }
  }
}
